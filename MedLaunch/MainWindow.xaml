    <Grid x:Name="RootGrid">
        <Grid.LayoutTransform>
            <ScaleTransform x:Name="mainScaleTransform" CenterX="0" CenterY="0" />
        </Grid.LayoutTransform>
        <!--<Grid.Background><ImageBrush ImageSource="/Data/Graphics/medicon.png" Opacity="0.1" TileMode="None" ViewboxUnits="Absolute" Viewport="0,0,32,32" /></Grid.Background>-->
        <TabControl Background="Transparent" SelectionChanged="TabControl_SelectionChanged">
            <TabItem Header="Games" Style="{StaticResource MetroTabItemCustom}">
                <Grid x:Name="grdGameLibrary">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="0" />
                        <ColumnDefinition Width="0.9*" MinWidth="250" />
                        <ColumnDefinition Name="gsRight" Width="Auto" />
                        <ColumnDefinition Name="sidebarColumn" Width="350" MaxWidth="1050" />
                    </Grid.ColumnDefinitions>
                    <!--<TextBlock FontSize="55" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap">Left side</TextBlock>-->
                    <WrapPanel x:Name="wpGamesList"
                               Grid.Column="0"
                               Margin="0"
                               x:FieldModifier="public"
                               Orientation="Vertical">
                        <Button x:Name="btnClearFilters"
                                HorizontalContentAlignment="Left"
                                Background="{DynamicResource AccentColorBrush}"
                                Click="btnClearFilters_Click"
                                Style="{StaticResource MenuButton}">
                            Clear All Filters
                        </Button>
