                        <Grid.RowDefinitions>
                            <!--<RowDefinition Height="Auto" /> -->
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <ScrollViewer Grid.Row="0"
                                      Width="{Binding ElementName=CaptureGrid, Path=ActualWidth}"
                                      Height="{Binding ElementName=CaptureGrid, Path=ActualHeight}"
                                      HorizontalScrollBarVisibility="Auto"
                                      VerticalScrollBarVisibility="Disabled">
                            <WrapPanel x:Name="CapWrapPanel" HorizontalAlignment="Left" Orientation="Vertical">
                                <Border x:Name="brdCapGeneral"
                                        Grid.Column="0"
                                        Margin="10"
                                        Style="{StaticResource Borders1}">
                                    <Expander BorderThickness="0" Header="General Capture Settings" IsExpanded="True">
                                        <StackPanel x:Name="spCapGeneral">
                                            <CheckBox x:Name="chkStreamDisk" Checked="chkStreamDisk_Checked" Unchecked="chkStreamDisk_Unchecked">Enable Recording to Disk</CheckBox>
                                            <CheckBox x:Name="chkStreamTwitch" Checked="chkStreamTwitch_Checked" Unchecked="chkStreamTwitch_Unchecked">Enable Streaming to Twitch</CheckBox>
                                            <Grid Margin="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="230" />
                                                    <ColumnDefinition Width="120" />
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="*" />
                                                </Grid.RowDefinitions>
                                                <Label Grid.Row="0" Grid.Column="0" HorizontalContentAlignment="Left">Recording Region Type</Label>
                                                <ComboBox Name="comboRecordingRegionType"
                                                          Grid.Row="0"
                                                          Grid.Column="1"
                                                          Margin="0,0,0,0"
                                                          SelectedValuePath="Tag">
                                                    <ComboBoxItem Tag="window">Window</ComboBoxItem>
                                                    <ComboBoxItem Tag="desktop">Desktop (FullScreen)</ComboBoxItem>
                                                </ComboBox>
                                                <Button x:Name="btnPathFfmpeg"
                                                        Grid.Row="1"
                                                        Grid.Column="1"
                                                        HorizontalContentAlignment="Left"
                                                        Click="btnPathFfmpeg_Click">
                                                    Path to FFMPEG EXE
                                                </Button>
                                                <TextBox x:Name="tbPathFfmpeg" Grid.Row="1" Grid.Column="0" />
                                                <TextBlock x:Name="lblXOffset"
                                                           Grid.Row="2"
                                                           Grid.ColumnSpan="2"
                                                           Margin="0,10,0,0"
                                                           TextAlignment="Center">
                                                    Fullscreen X and Y Offset (in pixels)<LineBreak />
                                                    Origin for both is top left corner of the primary monitor<LineBreak />
                                                    (Positive and negative integer values accepted)</TextBlock>
                                                <Grid Grid.Row="3" Grid.ColumnSpan="2" Margin="0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="0.5*" />
                                                        <ColumnDefinition Width="0.5*" />
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                    </Grid.RowDefinitions>
                                                    <Label Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center">X Offset</Label>
                                                    <Label Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center">Y Offset</Label>
                                                    <Controls:NumericUpDown Name="updownXOffset"
                                                                            Grid.Row="2"
                                                                            Grid.Column="0"
                                                                            Interval="1"
                                                                            Maximum="10000"
                                                                            Minimum="-10000" />
                                                    <Controls:NumericUpDown Name="updownYOffset"
                                                                            Grid.Row="2"
                                                                            Grid.Column="1"
                                                                            Interval="1"
                                                                            Maximum="10000"
                                                                            Minimum="-10000" />
                                                </Grid>
                                            </Grid>
                                        </StackPanel>
                                    </Expander>
                                </Border>
                                <Border x:Name="brdCapLocal"
                                        Grid.Column="0"
                                        Margin="10"
                                        Style="{StaticResource Borders1}">
                                    <Expander BorderThickness="0" Header="Recording Settings" IsExpanded="True">
                                        <StackPanel x:Name="spCapRecording1">
                                            <Grid Margin="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="230" />
                                                    <ColumnDefinition Width="120" />
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="*" />
                                                </Grid.RowDefinitions>
                                                <Button x:Name="btnPathOutputFolder"
                                                        Grid.Row="0"
                                                        Grid.Column="1"
                                                        HorizontalContentAlignment="Left"
                                                        Click="btnPathOutputFolder_Click">
                                                    Output Folder
                                                </Button>
                                                <TextBox x:Name="tbPathOutputFolder" Grid.Row="0" Grid.Column="0" />
                                                <Label Grid.Row="1" Grid.Column="0" HorizontalContentAlignment="Left">Output File Type</Label>
                                                <ComboBox Name="comboFileType"
                                                          Grid.Row="1"
                                                          Grid.Column="1"
                                                          Margin="0,0,0,0"
                                                          SelectedValuePath="Tag">
                                                    <ComboBoxItem Tag="mp4">MP4 (H.264)</ComboBoxItem>
                                                </ComboBox>
                                                <CheckBox x:Name="chkForceOverwrite"
                                                          Grid.Row="2"
                                                          Grid.ColumnSpan="2"
                                                          Checked="chkForceOverwrite_Checked"
                                                          ToolTip="If this is unchecked a filename will be generated with a datetime stamp appended"
                                                          Unchecked="chkForceOverwrite_Unchecked">
                                                    Overwrite Existing File
                                                </CheckBox>
                                            </Grid>
                                        </StackPanel>
                                    </Expander>
                                </Border>
                                <Border x:Name="brdCapTwitch"
                                        Grid.Column="0"
                                        Margin="10"
                                        Style="{StaticResource Borders1}">
                                    <Expander BorderThickness="0" Header="Streaming Settings" IsExpanded="True">
                                        <StackPanel x:Name="spCapStreaming1">
                                            <Grid Margin="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="120" />
                                                    <ColumnDefinition Width="230" />
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="*" />
                                                </Grid.RowDefinitions>
                                                <DockPanel Grid.Row="0"
                                                           Grid.ColumnSpan="2"
                                                           Margin="10"
                                                           VerticalAlignment="Center">
                                                    <Label Name="lblStreamVideoBitrate"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Top"
                                                           DockPanel.Dock="Top">
                                                        Video Bitrate (kbps)
                                                    </Label>
                                                    <TextBox Name="tbStreamVideoBitrate"
                                                             Width="40"
                                                             DockPanel.Dock="Right"
                                                             Text="{Binding ElementName=slVideoBitrate, Path=Value, UpdateSourceTrigger=PropertyChanged}"
                                                             TextAlignment="Right" />
                                                    <Slider Name="slVideoBitrate"
                                                            IsSnapToTickEnabled="True"
                                                            Maximum="3500"
                                                            Minimum="20"
                                                            TickFrequency="20"
                                                            TickPlacement="BottomRight" />
                                                </DockPanel>
                                                <DockPanel Grid.Row="1"
                                                           Grid.ColumnSpan="2"
                                                           Margin="10"
                                                           VerticalAlignment="Center">
                                                    <Label Name="lblStreamKeyframeInterval"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Top"
                                                           DockPanel.Dock="Top">
                                                        Keyframe Interval (seconds)
                                                    </Label>
                                                    <TextBox Name="tbStreamKeyframeInterval"
                                                             Width="40"
                                                             DockPanel.Dock="Right"
                                                             Text="{Binding ElementName=slStreamKeyframeInterval, Path=Value, UpdateSourceTrigger=PropertyChanged}"
                                                             TextAlignment="Right" />
                                                    <Slider Name="slStreamKeyframeInterval"
                                                            IsSnapToTickEnabled="True"
                                                            Maximum="20"
                                                            Minimum="2"
                                                            TickFrequency="1"
                                                            TickPlacement="BottomRight" />
                                                </DockPanel>
                                                <Label Name="lblTwitchStreamKey"
                                                       Grid.Row="2"
                                                       Grid.Column="0"
                                                       VerticalAlignment="Center"
                                                       VerticalContentAlignment="Center">
                                                    Twitch Stream Key
                                                </Label>
                                                <TextBox x:Name="tbTwitchStreamKey"
                                                         Grid.Row="2"
                                                         Grid.Column="1"
                                                         Margin="10" />
                                                <Label Name="lblTwitchBroadcastUrl"
                                                       Grid.Row="3"
                                                       Grid.Column="0"
                                                       VerticalAlignment="Center"
                                                       VerticalContentAlignment="Center">
                                                    Twitch Broadcast URL
                                                </Label>
                                                <TextBox x:Name="tbTwitchBroadcastUrl"
                                                         Grid.Row="3"
                                                         Grid.Column="1"
                                                         Margin="10" />
                                            </Grid>
                                        </StackPanel>
                                    </Expander>
                                </Border>
                            </WrapPanel>
                        </ScrollViewer>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Help" Style="{StaticResource MetroTabItemCustom}">
                <DockPanel x:Name="brws_Dp">
                    <Grid Width="{Binding ElementName=brws_Dp, Path=ActualWidth}" DockPanel.Dock="Top">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="500" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <ToolBar Grid.Column="0" DockPanel.Dock="Top">
                            <Button Command="NavigationCommands.BrowseBack">&lt;-- Back</Button>
                            <Button Command="NavigationCommands.BrowseForward">Forward --&gt;</Button>
                            <Separator />
                            <TextBox Name="txtUrl"
                                     Width="300"
                                     IsReadOnly="True"
                                     KeyUp="txtUrl_KeyUp" />
                            <Button Command="NavigationCommands.GoToPage">GO</Button>
                            <Separator Margin="30,0,0,0" />
                        </ToolBar>
                        <WrapPanel Grid.Row="0" Grid.Column="1">
                            <Button x:Name="btnWbMedLaunch"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Click="btnWbMedLaunch_Click">
                                MedLaunch Homepage
                            </Button>
                            <Separator />
                            <Button x:Name="btnWbMednafenHome"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Click="btnWbMednafenHome_Click">
                                Mednafen Homepage
                            </Button>
                            <Separator />
                            <Button x:Name="btnWbMednafenDoc"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Click="btnWbMednafenDoc_Click">
                                Mednafen Documentation
                            </Button>
                            <Separator />
                            <Button x:Name="btnWbMednafenForum"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Click="btnWbMednafenForum_Click">
                                Mednafen Forums
                            </Button>
                            <Separator />
                        </WrapPanel>
                        <WebBrowser Name="wb"
                                    Grid.Row="1"
                                    Grid.ColumnSpan="2"
                                    Margin="0,0,0,10"
                                    Navigating="wb_Navigating" />
                    </Grid>
                </DockPanel>
            </TabItem>
            <TabItem x:Name="UpdatedHeader" Header="Updates" Style="{StaticResource MetroTabItemCustom}">
                <WrapPanel Orientation="Vertical">
                    <Grid Width="500" Margin="50">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="0.7*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="150" />
                            <RowDefinition Height="200" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Button x:Name="btnCheckForUpdates"
                                Grid.Row="0"
                                Grid.ColumnSpan="2"
                                Click="btnCheckForUpdates_Click">
                            Check for MedLaunch Updates
                        </Button>
                        <Label x:Name="lblNoUpdate"
                               Grid.Row="1"
                               Grid.ColumnSpan="2"
                               Margin="20"
                               HorizontalAlignment="Center"
                               HorizontalContentAlignment="Center">
                            No MedLaunch Update Available
                        </Label>
                        <Label x:Name="lbl1"
                               Grid.Row="1"
                               Grid.Column="0"
                               Margin="10"
                               VerticalAlignment="Top"
                               VerticalContentAlignment="Top">
                            New Version
                        </Label>
                        <Label x:Name="lblVersion"
                               Grid.Row="1"
                               Grid.Column="1"
                               Margin="10" />
                        <Label x:Name="lbl2"
                               Grid.Row="2"
                               Grid.Column="0"
                               Margin="10"
                               VerticalAlignment="Top"
                               VerticalContentAlignment="Top">
                            Release Date
                        </Label>
                        <Label x:Name="lblDate"
                               Grid.Row="2"
                               Grid.Column="1"
                               Margin="10" />
                        <Label x:Name="lbl3"
                               Grid.Row="3"
                               Grid.Column="0"
                               Margin="10"
                               VerticalAlignment="Top"
                               VerticalContentAlignment="Top">
                            Release Notes
                        </Label>
                        <ScrollViewer x:Name="lbl4"
                                      Grid.Row="3"
                                      Grid.RowSpan="2"
                                      Grid.Column="1"
                                      HorizontalScrollBarVisibility="Disabled"
                                      VerticalScrollBarVisibility="Auto">
                            <TextBlock x:Name="tbNotes" Margin="10" TextWrapping="Wrap" />
                        </ScrollViewer>
                        <Label x:Name="lbl5"
                               Grid.Row="5"
                               Grid.Column="0"
                               Margin="10"
                               VerticalAlignment="Top"
                               VerticalContentAlignment="Top">
                            Binary URL
                        </Label>
                        <TextBlock x:Name="lblDownloadUrl"
                                   Grid.Row="5"
                                   Grid.Column="1"
                                   Margin="10" />
                        <!--<Label x:Name="lbl5" Grid.Column="0" Grid.Row="4" VerticalAlignment="Top" Margin="10" VerticalContentAlignment="Top">Changelog</Label><ScrollViewer x:Name="lbl6" Grid.Column="1" Grid.Row="4" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto"><TextBlock TextWrapping="Wrap"  x:Name="tbChangeLog" Margin="10"></TextBlock></ScrollViewer>-->
                        <Button x:Name="btnUpdate"
                                Grid.Row="5"
                                Grid.ColumnSpan="2"
                                Margin="0,50,0,0"
                                Click="btnUpdate_Click"
                                Content="Auto-Download and Install Latest MedLaunch Version" />
                    </Grid>
                    <Grid Width="500" Margin="50">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="0.7*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Button x:Name="btnCheckForMednafenUpdates"
                                Grid.Row="0"
                                Grid.ColumnSpan="2"
                                Click="btnCheckForMednafenUpdates_Click">
                            Refresh Mednafen Version Status
                        </Button>
                        <Label x:Name="lblcompatmedversiontxt"
                               Grid.Row="1"
                               Grid.Column="0"
                               Margin="20"
                               HorizontalAlignment="Center"
                               HorizontalContentAlignment="Center">
                            Latest Compatible Mednafen Version:
                        </Label>
                        <Label x:Name="lblcompatmedversion"
                               Grid.Row="1"
                               Grid.Column="1"
                               Margin="20"
                               HorizontalAlignment="Center"
                               HorizontalContentAlignment="Center" />
                        <Label x:Name="lblinstalledmedversiontxt"
                               Grid.Row="2"
                               Grid.Column="0"
                               Margin="20"
                               HorizontalAlignment="Center"
                               HorizontalContentAlignment="Center">
                            Installed Mednafen Version:
                        </Label>
                        <Label x:Name="lblinstalledmedversion"
                               Grid.Row="2"
                               Grid.Column="1"
                               Margin="20"
                               HorizontalAlignment="Center"
                               HorizontalContentAlignment="Center" />
                        <Button x:Name="btnUpdate1"
                                Grid.Row="3"
                                Grid.ColumnSpan="2"
                                Margin="20"
                                Click="btnUpdateMednafen_Click">
                            <TextBlock HorizontalAlignment="Center" TextAlignment="Center">
                                Download and Unpack the Latest Compatible Mednafen<LineBreak />
                                Version to Your Current Mednafen Folder</TextBlock>
                        </Button>
                    </Grid>
                </WrapPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Controls:MetroWindow>