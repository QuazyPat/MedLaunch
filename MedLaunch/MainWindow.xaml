                    ContextMenuService.IsEnabled="False"
                    Visibility="{Binding Source={x:Static diag:Debugger.IsAttached}, Converter={StaticResource BoolToVisibilityConverter}}">
                <Button.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Save All Configs To Disk" ToolTip="Exports all configs from the MedLaunch database to system-specific config files in the Mednafen directory" />
                    </ContextMenu>
                </Button.ContextMenu>
            </Button>
            <Button Click="TopMenu_Click" Content="Tools" ContextMenuService.IsEnabled="False">
                <Button.ContextMenu>
                    <ContextMenu>
                        <!--<MenuItem Header="Scanner"><MenuItem Header="Rescan ALL ROM Folders" Click="RescanRoms"  /><Separator BorderThickness="0.2" Padding="0" Margin="0" /><MenuItem x:Name="MenuScanRoms11" Header="Rescan NES" Click="ScanRoms_Click" /><MenuItem x:Name="MenuScanRoms12" Header="Rescan SNES" Click="ScanRoms_Click" /><MenuItem x:Name="MenuScanRoms10" Header="Rescan SMS" Click="ScanRoms_Click" /><MenuItem x:Name="MenuScanRoms4" Header="Rescan MD" Click="ScanRoms_Click" /><MenuItem x:Name="MenuScanRoms7" Header="Rescan PCE" Click="ScanRoms_Click" /><MenuItem x:Name="MenuScanRoms14" Header="Rescan VB" Click="ScanRoms_Click" /><MenuItem x:Name="MenuScanRoms6" Header="Rescan NGP" Click="ScanRoms_Click" /><MenuItem x:Name="MenuScanRoms15" Header="Rescan WSWAN" Click="ScanRoms_Click" /><MenuItem x:Name="MenuScanRoms1" Header="Rescan GB" Click="ScanRoms_Click" /><MenuItem x:Name="MenuScanRoms2" Header="Rescan GBA" Click="ScanRoms_Click" /><MenuItem x:Name="MenuScanRoms5" Header="Rescan GG" Click="ScanRoms_Click" /><MenuItem x:Name="MenuScanRoms3" Header="Rescan LYNX" Click="ScanRoms_Click" /></MenuItem>-->
                        <MenuItem Name="AuditScrapedData"
                                  Click="AuditScrapedData_Click"
                                  Header="Audit Scraped Data Folder"
                                  ToolTip="Show a list of game data that has been scraped along with system and game title" />
                    </ContextMenu>
                </Button.ContextMenu>
            </Button>
            <Button Click="TopMenu_Click" Content="Visual" ContextMenuService.IsEnabled="False">
                <Button.ContextMenu>
                    <ContextMenu>
                        <MenuItem Click="btnChangeColorScheme_Click" Header="Change Colour Scheme" />
                        <MenuItem Name="medCoreVisibility"
                                  Click="medCoreVisibility_Click"
                                  Header="Mednafen Core Visibility"
                                  ToolTip="Show/Hide certain emulated systems" />
                        <MenuItem Click="MenuItemColumn_Click" Header="Games Library Column Visibility" />
                        <MenuItem Name="resetGLColStates" Click="resetGLColStates_Click" Header="Reset Library Column Saved States to Default" />
                    </ContextMenu>
                </Button.ContextMenu>
            </Button>
            <Button Click="TopMenu_Click" Content="Logs" ContextMenuService.IsEnabled="False">
                <Button.ContextMenu>
                    <ContextMenu>
                        <MenuItem Click="btnViewMednafenLogFile_Click" Header="View Mednafen Log (stdout.txt)" />
                        <MenuItem Click="btnViewMednafenExFile_Click" Header="View MedLaunch Exception Log (Exceptions.log)" />
                    </ContextMenu>
                </Button.ContextMenu>
            </Button>
        </Controls:WindowCommands>
    </Controls:MetroWindow.LeftWindowCommands>
