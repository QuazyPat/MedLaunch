<Controls:MetroWindow x:Class="MedLaunch.MainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:diag="clr-namespace:System.Diagnostics;assembly=mscorlib"
                      xmlns:exts="clr-namespace:MedLaunch.Extensions"
                      xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
                      xmlns:local="clr-namespace:MedLaunch"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
                      x:Name="MW"
                      Title="MedLaunch - Windows Front-End for Mednafen (This string is replaced at runtime)"
                      Width="1600"
                      Height="800"
                      BorderThickness="0"
                      Closing="MW_Closing"
                      GlowBrush="Black"
                      Icon="MedLaunchIcon.ico"
                      Loaded="MetroWindow_Loaded"
                      ResizeMode="CanResizeWithGrip"
                      ShowIconOnTitleBar="True"
                      TextOptions.TextFormattingMode="Display"
                      TitleCaps="False"
                      WindowStartupLocation="CenterScreen"
                      WindowTransitionsEnabled="False"
                      mc:Ignorable="d">
    <Window.Resources>
        <ContextMenu x:Key="cmGamesListSingle" x:Name="cmGamesListSingle">
            <MenuItem Click="LaunchRom_Click" Header="Play Game" />
            <MenuItem Click="LaunchRomShowConfig_Click" Header="Play Game (View/Edit Launch String First)" />
            <MenuItem Click="MenuItemFavorite_Click" Header="Favorites" />
            <MenuItem Click="CopyLaunchStringToClipboard_Click" Header="Copy Launch String to Clipboard" />
            <MenuItem Click="examineRom_Click" Header="View/Edit Game Data" />
            <MenuItem Click="btnScrapingPickGame_Click" Header="Identify and Scrape Game" />
            <MenuItem Click="DeleteRom_Click" Header="Delete From Games Library" />
            <MenuItem Background="Red" Foreground="Yellow" Header="Destructive Options">
                <MenuItem Click="DeleteRomFromDisk_Click" Header="Delete ROM From Disk" />
            </MenuItem>
        </ContextMenu>
        <ContextMenu x:Key="cmMultiDiscGamesListSingle" x:Name="cmMultiDiscGamesListSingle">
            <MenuItem Click="LaunchRom_Click" Header="Play Game (First Disc)" />
            <MenuItem Click="LaunchRomShowConfig_Click" Header="Play Game (First Disc) (View/Edit Launch String First)" />
            <MenuItem Click="LaunchRomChooseDisc_Click" Header="Play Game (Select Disc)" />
            <MenuItem Click="MenuItemFavorite_Click" Header="Favorites" />
            <MenuItem Click="CopyLaunchStringToClipboard_Click" Header="Copy Launch String to Clipboard" />
            <MenuItem Click="examineRom_Click" Header="View/Edit Game Data" />
            <MenuItem Click="btnScrapingPickGame_Click" Header="Identify and Scrape Game" />
            <MenuItem Click="DeleteRom_Click" Header="Delete From Games Library" />
            <MenuItem Background="Red" Foreground="Yellow" Header="Destructive Options">
                <MenuItem Click="DeleteRomFromDisk_Click" Header="Delete ROM From Disk" />
            </MenuItem>
        </ContextMenu>
        <ContextMenu x:Key="cmGamesListMultiple" x:Name="cmGamesListMultiple">
            <MenuItem Click="MenuItemFavorites_Click" Header="Favorites" />
            <MenuItem Click="ScrapeGamesMultiple_Click" Header="Auto-Scrape Selected Games" />
            <MenuItem Click="ReScrapeGamesMultiple_Click" Header="Re-Scrape Selected Games" />
            <MenuItem Click="DeleteRoms_Click" Header="Delete From Games Library" />
            <MenuItem Background="Red" Foreground="Yellow" Header="Destructive Options">
                <MenuItem Click="DeleteRomsFromDisk_Click" Header="Delete ROMs From Disk" />
            </MenuItem>
        </ContextMenu>
        <!--  TabItem styling  -->
        <Style x:Key="MetroTabItemCustom" TargetType="TabItem">
            <Setter Property="Background" Value="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type TabControl}}, Path=Background, Mode=OneWay, FallbackValue=Transparent}" />
            <Setter Property="BorderBrush" Value="{DynamicResource AccentColorBrush}" />
            <Setter Property="BorderThickness" Value="0" />
            <!--  special property for header font size  -->
            <Setter Property="Controls:ControlsHelper.HeaderFontSize" Value="{DynamicResource TabItemFontSize}" />
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="IsTabStop" Value="False" />
            <Setter Property="MinHeight" Value="5" />
            <Setter Property="MinWidth" Value="5" />
            <Setter Property="Padding" Value="6,2,6,2" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Border"
                                HorizontalAlignment="Stretch"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}">
                            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" UseLayoutRounding="True">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition x:Name="PART_ContentLeftCol" Width="Auto" />
                                    <ColumnDefinition x:Name="PART_ContentRightCol" Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition x:Name="PART_ContentTopRow" Height="Auto" />
                                    <RowDefinition x:Name="PART_ContentBottomRow" Height="Auto" />
                                </Grid.RowDefinitions>
                                <Controls:ContentControlEx x:Name="ContentSite"
                                                           Grid.Row="0"
                                                           Grid.Column="0"
                                                           Padding="{TemplateBinding Padding}"
                                                           Content="{TemplateBinding Header}"
                                                           ContentCharacterCasing="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(Controls:ControlsHelper.ContentCharacterCasing)}"
                                                           ContentStringFormat="{TemplateBinding HeaderStringFormat}"
                                                           ContentTemplate="{TemplateBinding HeaderTemplate}"
                                                           ContentTemplateSelector="{TemplateBinding HeaderTemplateSelector}"
                                                           FontFamily="{TemplateBinding FontFamily}"
                                                           FontSize="25"
                                                           FontStretch="{TemplateBinding Controls:ControlsHelper.HeaderFontStretch}"
                                                           FontStyle="Normal"
                                                           FontWeight="ExtraBold"
                                                           Foreground="{TemplateBinding Foreground}"
                                                           RecognizesAccessKey="True"
                                                           SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                                           UseLayoutRounding="True" />
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="TabStripPlacement" Value="Left">
                                <Setter TargetName="ContentSite" Property="Grid.Column" Value="0" />
                                <Setter TargetName="ContentSite" Property="Grid.Row" Value="0" />
                                <Setter TargetName="PART_ContentBottomRow" Property="Height" Value="Auto" />
                                <Setter TargetName="PART_ContentLeftCol" Property="Width" Value="*" />
                                <Setter TargetName="PART_ContentRightCol" Property="Width" Value="Auto" />
                                <Setter TargetName="PART_ContentTopRow" Property="Height" Value="*" />
                            </Trigger>
                            <Trigger Property="TabStripPlacement" Value="Top">
                                <Setter TargetName="ContentSite" Property="Grid.Column" Value="0" />
                                <Setter TargetName="ContentSite" Property="Grid.Row" Value="0" />
                                <Setter TargetName="PART_ContentBottomRow" Property="Height" Value="Auto" />
                                <Setter TargetName="PART_ContentLeftCol" Property="Width" Value="*" />
                                <Setter TargetName="PART_ContentRightCol" Property="Width" Value="Auto" />
                                <Setter TargetName="PART_ContentTopRow" Property="Height" Value="*" />
                            </Trigger>
                            <Trigger Property="TabStripPlacement" Value="Right">
                                <Setter TargetName="ContentSite" Property="Grid.Column" Value="1" />
                                <Setter TargetName="ContentSite" Property="Grid.Row" Value="0" />
                                <Setter TargetName="PART_ContentBottomRow" Property="Height" Value="Auto" />
                                <Setter TargetName="PART_ContentLeftCol" Property="Width" Value="Auto" />
                                <Setter TargetName="PART_ContentRightCol" Property="Width" Value="*" />
                                <Setter TargetName="PART_ContentTopRow" Property="Height" Value="*" />
                            </Trigger>
                            <Trigger Property="TabStripPlacement" Value="Bottom">
                                <Setter TargetName="ContentSite" Property="Grid.Column" Value="0" />
                                <Setter TargetName="ContentSite" Property="Grid.Row" Value="1" />
                                <Setter TargetName="PART_ContentBottomRow" Property="Height" Value="*" />
                                <Setter TargetName="PART_ContentLeftCol" Property="Width" Value="*" />
                                <Setter TargetName="PART_ContentRightCol" Property="Width" Value="Auto" />
                                <Setter TargetName="PART_ContentTopRow" Property="Height" Value="Auto" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="true">
                                <Setter TargetName="ContentSite" Property="TextElement.Foreground" Value="{DynamicResource AccentColorBrush}" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="false">
                                <Setter TargetName="ContentSite" Property="TextElement.Foreground" Value="{DynamicResource GrayNormalBrush}" />
                            </Trigger>
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsSelected}" Value="True" />
                                </MultiDataTrigger.Conditions>
                            </MultiDataTrigger>
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsSelected}" Value="True" />
                                </MultiDataTrigger.Conditions>
                            </MultiDataTrigger>
                            <Trigger SourceName="Border" Property="IsMouseOver" Value="True">
                                <Setter TargetName="ContentSite" Property="TextElement.Foreground" Value="{DynamicResource GrayHoverBrush}" />
                            </Trigger>
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsSelected}" Value="False" />
                                    <Condition Binding="{Binding ElementName=Border, Path=IsMouseOver}" Value="True" />
                                </MultiDataTrigger.Conditions>
                            </MultiDataTrigger>
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsSelected}" Value="False" />
                                    <Condition Binding="{Binding ElementName=Border, Path=IsMouseOver}" Value="True" />
                                </MultiDataTrigger.Conditions>
                            </MultiDataTrigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition SourceName="Border" Property="IsMouseOver" Value="True" />
                                    <Condition Property="IsSelected" Value="True" />
                                </MultiTrigger.Conditions>
                                <Setter TargetName="ContentSite" Property="TextElement.Foreground" Value="{DynamicResource HighlightBrush}" />
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="VerticalContentAlignment" Value="Stretch" />
        </Style>
    </Window.Resources>
    <Window.CommandBindings>
        <CommandBinding CanExecute="BrowseBack_CanExecute" Command="NavigationCommands.BrowseBack" Executed="BrowseBack_Executed" />
        <CommandBinding CanExecute="BrowseForward_CanExecute" Command="NavigationCommands.BrowseForward" Executed="BrowseForward_Executed" />
        <CommandBinding CanExecute="GoToPage_CanExecute" Command="NavigationCommands.GoToPage" Executed="GoToPage_Executed" />
    </Window.CommandBindings>
    <Controls:MetroWindow.TitleTemplate>
        <DataTemplate>
            <TextBlock Margin="8,-1,8,0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontFamily="{DynamicResource HeaderFontFamily}"
                       FontSize="14"
                       FontWeight="Black"
                       Text="{TemplateBinding Content}"
                       TextTrimming="CharacterEllipsis" />
        </DataTemplate>
    </Controls:MetroWindow.TitleTemplate>
    <Controls:MetroWindow.LeftWindowCommands>
        <Controls:WindowCommands Margin="0">
            <!--<Button x:Name="btnViewMednafenLogFile" Content="Open Mednafen Log" Click="btnViewMednafenLogFile_Click" /><Button x:Name="btnChangeColorScheme" Content="Change Colour Scheme" Click="btnChangeColorScheme_Click" />-->
            <Button Click="TopMenu_Click" Content="File" ContextMenuService.IsEnabled="False">
