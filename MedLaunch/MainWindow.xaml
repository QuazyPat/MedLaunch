                                     Checked="btnShowAll_Checked"
                                     GroupName="flt"
                                     Style="{StaticResource {x:Type ToggleButton}}"
                                     Unchecked="btnFilters_UnChecked">
                            Show All Games
                            <RadioButton.ContextMenu>
                                <ContextMenu>
                                    <MenuItem x:Name="AllGamesResetToDefaultColumnState" Click="AllGamesResetToDefaultColumnState_Click" Header="Reset 'Show All Games' Column States to Default" />
                                </ContextMenu>
                            </RadioButton.ContextMenu>
                        </RadioButton>
                        <RadioButton x:Name="btnFavorites"
                                     HorizontalContentAlignment="Left"
                                     Checked="btnFavorites_Checked"
                                     GroupName="flt"
                                     Style="{StaticResource {x:Type ToggleButton}}"
                                     Unchecked="btnFilters_UnChecked">
                            <RadioButton.ContextMenu>
                                <ContextMenu>
                                    <MenuItem x:Name="ScrapeGamesFavorite" Click="ScrapeFavorites_Click" Header="Auto-Scrape (previously unscraped) Favorites" />
                                    <MenuItem x:Name="RescrapeGamesFavorite" Click="ReScrapeFavorites_Click" Header="Re-Scrape ALL Favorites" />
                                    <Separator />
                                    <MenuItem x:Name="FavoritesResetToDefaultColumnState" Click="FavoriteResetToDefaultColumnState_Click" Header="Reset 'Favorites' Column States to Default" />
                                </ContextMenu>
                            </RadioButton.ContextMenu>
                            Favorites
                        </RadioButton>
                        <RadioButton x:Name="btnUnscraped"
                                     HorizontalContentAlignment="Left"
                                     Checked="btnUnscraped_Checked"
                                     GroupName="flt"
                                     Style="{StaticResource {x:Type ToggleButton}}"
                                     Unchecked="btnFilters_UnChecked">
                            Unscraped Games
                            <RadioButton.ContextMenu>
                                <ContextMenu>
                                    <MenuItem x:Name="UnscrapedResetToDefaultColumnState" Click="UnscrapedResetToDefaultColumnState_Click" Header="Reset 'Unscraped Games' Column States to Default" />
                                </ContextMenu>
                            </RadioButton.ContextMenu>
                        </RadioButton>
                        <Border Grid.Column="0" Margin="0" Style="{StaticResource Borders1}">
                            <Expander BorderThickness="0" Header="Roms" IsExpanded="True">
                                <Expander.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Click="RemoveAllGames_Click" Header="Remove All Games From Database" />
                                    </ContextMenu>
                                </Expander.ContextMenu>
                                <StackPanel x:Name="spRomFilters">
                                    <RadioButton x:Name="btnNes"
                                                 HorizontalContentAlignment="Left"
                                                 Checked="btnNes_Checked"
                                                 GroupName="flt"
                                                 Style="{StaticResource {x:Type ToggleButton}}"
